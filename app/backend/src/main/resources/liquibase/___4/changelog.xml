<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="1" author="robert">
        <comment>add projekt to nutzer mapping table</comment>
        <createTable tableName="projekt_mitglied">
            <!-- EventValueRef -->
            <column name="id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="ref_id" type="UUID">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="2" author="robert">
        <addForeignKeyConstraint
                baseColumnNames="id"
                baseTableName="projekt_mitglied"
                constraintName="fk_projekt_mitglied_id"
                referencedColumnNames="id"
                referencedTableName="projekt"
        />
    </changeSet>
    <changeSet id="3" author="robert">
        <addForeignKeyConstraint
                baseColumnNames="ref_id"
                baseTableName="projekt_mitglied"
                constraintName="fk_projekt_mitglied_ref_id"
                referencedColumnNames="id"
                referencedTableName="nutzer"
        />
    </changeSet>
</databaseChangeLog>
