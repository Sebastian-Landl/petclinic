<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="1" author="robert">
        <comment>add rolle collection table</comment>
        <createTable tableName="nutzer_rolle">
            <!-- NutzerRolle -->
            <column name="id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="rolle" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="2" author="robert">
        <addForeignKeyConstraint
                baseColumnNames="id"
                baseTableName="nutzer_rolle"
                constraintName="fk_nutzer_rolle_id"
                referencedColumnNames="id"
                referencedTableName="nutzer"
        />
    </changeSet>
</databaseChangeLog>
